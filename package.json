{
  "name": "1inch-protected-options",
  "version": "1.0.0",
  "description": "Options-like strategies with stop-loss protection for 1inch Limit Order Protocol",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "demo": "hardhat run scripts/demo.js",
    "deploy:localhost": "hardhat run scripts/deploy.js --network localhost",
    "deploy:testnet": "hardhat run scripts/deploy-testnet.js --network baseSepolia",
    "deploy:sepolia": "hardhat run scripts/deploy-testnet.js --network sepolia",
    "deploy:polygon": "hardhat run scripts/deploy-polygon.js --network polygon",
    "deploy:mainnet": "hardhat run scripts/deploy.js --network mainnet",
    "deploy:arbitrum": "hardhat run scripts/deploy.js --network arbitrum",
    "verify": "hardhat verify",
    "coverage": "hardhat coverage",
    "lint": "solhint 'contracts/**/*.sol'",
    "format": "prettier --write 'contracts/**/*.sol'"
  },
  "keywords": [
    "1inch",
    "defi",
    "options",
    "stop-loss",
    "limit-orders",
    "ethereum",
    "solidity"
  ],
  "author": "Protected Options Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@openzeppelin/hardhat-upgrades": "^3.0.0",
    "hardhat": "^2.19.0",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.5",
    "solhint": "^4.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-solidity": "^1.2.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "@chainlink/contracts": "^0.8.0",
    "dotenv": "^16.3.0"
  }
} 